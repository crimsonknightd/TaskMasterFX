<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>


<DialogPane fx:id="loginPane" fx:controller="ctrl.LoginController" xmlns="http://javafx.com/javafx/8.0.111"
	xmlns:fx="http://javafx.com/fxml/1">
	<content>
		<GridPane vgap="10" hgap="10">
			<Label fx:id="emailLabel" text="メール アドレス" GridPane.rowIndex="1"
				GridPane.columnIndex="0" />
			<TextField fx:id="email" GridPane.rowIndex="1"
				GridPane.columnIndex="1" />

			<Label fx:id="passwordLabel" text="パスワード" GridPane.rowIndex="2"
				GridPane.columnIndex="0" />
			<PasswordField fx:id="password" GridPane.rowIndex="2"
				GridPane.columnIndex="1" />
				
			<StackPane GridPane.rowIndex="3" GridPane.columnIndex="0" >
				<Label text="新規ユーザー" />
				<Button text="新規ユーザー" fx:id="newUser" onAction="#newUser" style="-fx-opacity:0" />
			</StackPane>
			
		</GridPane>
	</content>
</DialogPane>
